<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.settings.SettingsFragment">

    <TextView
        android:id="@+id/text_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="265dp">


        <Button
            android:id="@+id/button_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="74dp"
            android:onClick="deleteAccount"
            android:background="#CCF44336"
            android:text="@string/title_button_delete_account" />

        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/profile1"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/profile_pic"/>

        <TextView
            android:id="@+id/usernameHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingBar"
            android:layout_toRightOf="@id/profilepic"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/usernameHolder"
            android:background="#CCffffff "
            android:layout_toEndOf="@id/profilepic" />

        <TextView
            android:id="@+id/username"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingBar"
            android:layout_toRightOf="@id/usernameHolder"
            android:background="#CCffffff "
            android:text="@string/username" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/profilepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:background="#CCffffff "
            android:rating = "2.5"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:progress="100"
            android:fadingEdge="horizontal"
            android:layout_below="@id/profilepic"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:background="#CCffffff "
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/emailHolder"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_below="@id/usernameHolder"
            android:layout_toRightOf="@id/profilepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCffffff "
            android:text="@string/emailHolder" />

        <TextView
            android:id="@+id/email"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@id/usernameHolder"
            android:layout_toRightOf="@id/emailHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCffffff "
            android:text="@string/email" />

        <Button
            android:id="@+id/button_clearRecipes"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_above="@id/button_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCF44336"
            android:text="@string/clearRecipes" />

        <Button
            android:id="@+id/button_changeDetails"
            android:layout_above="@id/button_clearRecipes"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCF44336"
            android:text="@string/changeDetails" />

        <ImageButton
            android:id="@+id/button_savedRecipes"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/recipebook" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>